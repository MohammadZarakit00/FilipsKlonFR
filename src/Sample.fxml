<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <top>
      <AnchorPane prefHeight="602.0" prefWidth="724.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="ta" editable="false" layoutX="78.0" layoutY="323.0" prefHeight="200.0" prefWidth="565.0" />
            <TextField fx:id="tfId" layoutX="22.0" layoutY="72.0" promptText="ID">
               <tooltip>
                  <Tooltip text="Enter the ID of a student, course or exam." />
               </tooltip></TextField>
            <TextField fx:id="tfName" layoutX="14.0" layoutY="111.0" promptText="Name">
               <tooltip>
                  <Tooltip text="Enter the name of a student, course or exam." />
               </tooltip></TextField>
            <ToolBar layoutY="-3.0" style="-fx-background-color: #2184ff;">
               <items>
                  <Button mnemonicParsing="false" onAction="#btnAddStudent" text="Add Student" />
                  <Button mnemonicParsing="false" onAction="#btnFindStudent" text="Find Student" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteStudent" text="Delete Student" />
                  <MenuButton fx:id="menuButton" mnemonicParsing="false" text="Extra Actions">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1">
                           <graphic>
                              <Button mnemonicParsing="false" text="Median score on exam" />
                           </graphic>
                        </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Action 2">
                           <graphic>
                              <Button mnemonicParsing="false" text="Average score" />
                           </graphic>
                        </MenuItem>
                    </items>
                  </MenuButton>
               </items>
            </ToolBar>
            <Text layoutX="251.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Student Management">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </top>
</BorderPane>
