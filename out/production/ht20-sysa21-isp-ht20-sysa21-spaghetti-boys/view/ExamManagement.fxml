<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<Pane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ExamManagementController">
   <children>
      <BorderPane>
         <left>
            <AnchorPane prefHeight="602.0" prefWidth="724.0" style="-fx-background-color: #83878A;" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="outPutArea" editable="false" layoutX="80.0" layoutY="354.0" prefHeight="200.0" prefWidth="565.0" promptText="Choose an action above" style="-fx-background-color: #ffffff;" wrapText="true" />
                  <TextField fx:id="tfId" layoutX="128.0" layoutY="159.0" promptText="ID" style="-fx-background-color: #ffffff;">
                     <tooltip>
                        <Tooltip text="Exam-ID must start with &quot;E&quot; and be followed by 5 numbers between 10000 and 99999" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="tfTime" layoutX="128.0" layoutY="195.0" promptText="Time" style="-fx-background-color: #ffffff;">
                     <tooltip>
                        <Tooltip text="Enter a valid time" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="tfDate" layoutX="128.0" layoutY="232.0" promptText="Date" style="-fx-background-color: #FFFFFF;">
                     <tooltip>
                        <Tooltip text="Enter a valid date" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="tfLocation" layoutX="128.0" layoutY="265.0" promptText="Location" style="-fx-background-color: #ffffff;">
                     <tooltip>
                        <Tooltip text="Enter a valid location" />
                     </tooltip>
                  </TextField>
                  <ToolBar layoutY="105.0" prefHeight="35.0" prefWidth="724.0" style="-fx-background-color: #3FB4F7;">
                     <items>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#btnAddExam" text="Add Exam" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#btnRemoveExam" text="Remove Exam" />
                        <MenuButton fx:id="menuButton" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="119.0" text="Extra Actions">
                           <items>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button fx:id="btnMeanResult" mnemonicParsing="false" onAction="#btnMeanResult" text="Mean Score" />
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button fx:id="btnMedianResult" mnemonicParsing="false" onAction="#btnMedianResult" text="Median Score" />
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button fx:id="btnNbrPassedExam" mnemonicParsing="false" onAction="#btnNbrPassedExam" text="Number of passed students" />
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button fx:id="btnRegisterResult" mnemonicParsing="false" onAction="#btnRegisterResult" text="Register result" />
                                 </graphic>
                              </MenuItem>
                           </items>
                        </MenuButton>
                     </items>
                  </ToolBar>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9dcdf1" height="107.0" layoutY="-2.0" stroke="#96818100" strokeType="INSIDE" width="724.0" />
                  <Text fill="WHITE" layoutX="185.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Exam Management">
                     <font>
                        <Font name="Old English Text MT" size="40.0" />
                     </font>
                  </Text>
                  <ComboBox fx:id="courseChoiceBox" editable="true" layoutX="128.0" layoutY="300.0" prefHeight="26.0" prefWidth="150.0" promptText="Course" style="-fx-background-color: #ffffff;" />
                  <Button layoutX="47.0" layoutY="159.0" mnemonicParsing="false" onAction="#btnGenerateExamId" text="Generate" />
                  <ComboBox fx:id="studentChoiceBox" editable="true" layoutX="537.0" layoutY="187.0" prefHeight="17.0" prefWidth="134.0" promptText="Students" style="-fx-background-color: #ffffff;" />
                  <TextField fx:id="tfScore" layoutX="537.0" layoutY="150.0" promptText="Result" style="-fx-background-color: #FFFFFF;" />
                  <TextArea fx:id="taErrorText" editable="false" layoutX="343.0" layoutY="153.0" prefHeight="152.0" prefWidth="172.0" style="-fx-background-color: #83878A;" wrapText="true">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </TextArea>
               </children>
            </AnchorPane>
         </left>
      </BorderPane>
   </children>
</Pane>
